# Test environment Dockerfile for Sovereign-Doc
# Uses Python 3.12 for compatibility with fastembed/onnxruntime

FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    poppler-utils \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install fastembed (not in requirements.txt due to Python 3.14 incompatibility)
RUN pip install --no-cache-dir fastembed>=0.2.0

# Install pytest and async support
RUN pip install --no-cache-dir pytest>=8.0.0 pytest-asyncio>=0.23.0

# Copy project files (will be mounted at runtime)
# COPY . .

# Default command runs pytest
CMD ["pytest", "tests/", "-v"]
