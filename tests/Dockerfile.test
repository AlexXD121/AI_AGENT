# Optimized Test Dockerfile with Layer Caching
# Build time: <60 seconds (dependencies cached)

FROM python:3.12-slim

WORKDIR /app

# Layer 1: System dependencies (rarely changes - cached)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Layer 2: Python dependencies (changes rarely - cached)
# CRITICAL: Copy requirements FIRST, before code
# Docker checks file checksum - if unchanged, skips reinstall
COPY tests/requirements-test.txt /app/requirements.txt

# Layer 3: Install Python packages (cached if requirements unchanged)
RUN pip install --no-cache-dir -r requirements.txt

# Layer 4: Copy application code (changes often, but fast)
# This layer rebuilds quickly when code changes
COPY . /app

# Set Python path for imports
ENV PYTHONPATH=/app

# Default command
CMD ["pytest", "tests/", "-v"]
